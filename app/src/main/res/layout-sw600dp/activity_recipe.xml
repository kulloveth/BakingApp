<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".ui.RecipeDetailActivity">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ingredient_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:background="@color/saddlebrown"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dimens_8dp" />

        <FrameLayout
            android:id="@+id/step_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:background="@color/darksalmon"
            android:layout_marginTop="@dimen/dimens_16dp" />

    </LinearLayout>



        <FrameLayout
            android:id="@+id/step_detail_graph"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:background="#333"
            android:layout_height="match_parent" />



</LinearLayout>